@model LoginVM
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Log in</h4>

                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="UsernameOrEmail">UsernameOrEmail</label>
                            <input asp-for="UsernameOrEmail" placeholder="UsernameOrEmail">
                            <span asp-validation-for="UsernameOrEmail"></span>
                        </div>
                    
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password"></span>
                        </div>
                       <div class="form-group">
                            <label asp-for="IsRememberMe">IsRememberMe</label>
                            <input asp-for="IsRememberMe">
                            <span asp-validation-for="IsRememberMe"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-light" asp-controller="home" asp-action="index">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
